    function So_GetPostStickers() {
        $('.opened-chats .chat-box-normal .chat-footer .chat-extra-box, .opened-chats .chat-box-normal .chat-footer .chat-list-box').hide();
        $.post(So_Requests() + '?type=get-post-stickers', {

