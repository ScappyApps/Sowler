            if (data.status == 200) {
                $('#stickers-post').find('.dropdown-menu').toggle();
                $('.box-stickers').html(data.html);
            } else {
                return false;
            }
        });
    }
    function So_GetPackageTypePost(package) {
        if ($('.box-stickers').find('.stickers-body').length < 1) {
            $('.box-stickers').html('<img id="sticker-loading-img" src="<?php echo $so['config']['site_url']; ?>/upload/images/loading.gif" />');
        } else {
            $('.box-stickers').find('.stickers-body').html('<img id="sticker-loading-img" src="<?php echo $so['config']['site_url']; ?>/upload/images/loading.gif" />');
        }
        $.post(So_Requests() + '?type=get-packge-type-post', {
            sticker_id: package
        }, function (data) {
            if (data.status == 200) {
                if ($('.box-stickers').find('.stickers-body').length < 1) {
                    $('.box-stickers').html(data.html);
                } else {
                    $('.box-stickers').find('.stickers-body').html(data.html);
                }
            } else {
                return false;
            }
        });
    }
