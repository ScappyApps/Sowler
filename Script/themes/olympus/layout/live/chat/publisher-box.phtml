                $('.askfjafklj.pull-right').css('opacity', '0.5');
                $('.askfjafklj.pull-right').find('a').attr('onclick', '');
            },
            uploadProgress: function (event, position, total, percentComplete) {
                var percentVal = percentComplete + '%';
                bar_.width(percentVal);
				$('.TweetBoxUploadProgress').show();
                percent_.html(percentVal);
            },
            success: function (data) {
				var JSONdata = JSON.parse(data);
                $('.TweetBoxUploadProgress').hide();
                if (JSONdata[0].status == 200) {
					<?php if ($so['config']['websocket'] == 1) { ?>
					socket.emit('sendMessageLivestream', JSONdata[0]);
					<?php } ?>
                    $('#stickers-post').find('.dropdown-menu').hide();
                    So_ClosePublisherBox();
                    So_BackgroundHidden();
                    $('.color-box').hide();
                    $('.ComposerThumbnail-image').attr('src', '');
                    $('.thumbnail-container').hide();
                    $('.chat-live-get-comments .comments-list').prepend(JSONdata[0].html);
                    So_HideLightbox();
                    $('form#publisher-box').clearForm();
                    $('#post-gif').val('');
                    $('#post-sticker').val('');
                    $("#html-title").val('');
                    $("#html-image").val('');
                    $("#html-body").val('');
                    $("#html-url").val('');
                    if ($('.safjafhasiuoh').length > 0) {
                        $('.safjafhasiuoh').hide();
                    }
                } else {
                    return false;
                }
            }
        });
